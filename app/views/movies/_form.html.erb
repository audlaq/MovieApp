<% if @movie.errors.any? %>

<h2> There was an error saving your movie </h2>
<ul>
	<% @movie.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end %>


<%= form_for @movie do |f| %>
	<fieldset>
		<div class = "fields">
			<%= f.label :title %>
			<%= f.text_field :title %>
		<div>
		<div class ='fields'>
			<%= f.label :description %>
			<%= f.text_field :description %>
		<div>
		<div class ='fields'>
			<%= f.label :year_released %>
			<%= f.text_field :year_released %>
		<div>
		<div class ='fields'>
			<%= f.label :rating %>
			<%= f.text_field :rating %>
		<div>
	</fieldset>
	<p><%= "Rating: 1-5 pts" %></p>
	<%= f.submit %>
<% end %>